<div class="card" style="width: 100%;">
    <div class="col-sm-1 offset-md-1">
      <img style="width: 100%; padding: top 10px;" src="{{this.image_url}}" alt="Card image cap">
    </div>
      
      <div class="card-body">
        <h2 class="card-title">{{this.name}} </h2>
        <h5 class="card-title">{{this.tagline}} </h5>
        <p class="card-text">{{this.description}}</p>
      </div>
</div>